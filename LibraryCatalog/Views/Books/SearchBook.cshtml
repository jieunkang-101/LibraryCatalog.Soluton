@{
  Layout = "_Layout";
}

@using LibraryCatalog.Models
@model List<LibraryCatalog.Models.Book>
  

<h2>Title search: </h2>
<hr>
<br>
@if (@Model.Count == 0)
{
  <h4>Nothing found</h4>
}
else 
{
  <ul>
    @foreach (Book book in Model)
    {
      <h5><li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li></h5>
    }
  </ul>
}