@{
  Layout = "_Layout";
}

@using LibraryCatalog.Models
@model List<LibraryCatalog.Models.Book>
  
<h2>Books</h2>
<hr>
<br>
@if (@Model.Count == 0)
{
  <h3><i>There are no Books in the Database at this time.</i></h3>
}
else
{
  <ul>
    @foreach (Book book in Model)
    {
      <h5><li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li></h5>
    }
  </ul>
} 
<br>
<hr>
@Html.ActionLink("Add New Book", "Create", "Books", null, new { @class = "btn btn-dark"})