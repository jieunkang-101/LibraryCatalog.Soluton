@{
  Layout = "_Layout";
}
<br>
<div class="row">
  <div class="col-md-6">
    @using (Html.BeginForm("SearchBook","Books")) 
    {
      @Html.TextBox("SearchBook", null, new {@class="form-control"})
      <br>
      <input type="submit" value="Search Catalog by Title" class="btn btn-outline-dark">
    }
  </div>
  <div class="col-md-6">
    @using (Html.BeginForm("SearchAuthor","Authors")) 
    {
      @Html.TextBox("SearchAuthor", null, new {@class="form-control"})
      <br>
      <input type="submit" value="Search Catalog by Author" class="btn btn-outline-dark">
    }
  </div>
</div>
<br>
<br>
<hr>
