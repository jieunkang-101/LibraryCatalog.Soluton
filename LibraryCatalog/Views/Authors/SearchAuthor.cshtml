@{
  Layout = "_Layout";
}

@using LibraryCatalog.Models
@model List<LibraryCatalog.Models.Author>
  

<h2>Author search: </h2>
<hr>
<br>
@if (@Model.Count == 0)
{
  <h4>Nothing found</h4>
}
else 
{
  <ul>
    @foreach (Author author in Model)
    {
      <h5><li>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</li></h5>
    }
  </ul>
}