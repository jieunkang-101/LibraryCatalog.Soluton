@{
  Layout = "_Layout";
}

@using LibraryCatalog.Models

@model List<LibraryCatalog.Models.Author>

<h2>Authors</h2>

@if (@Model.Count == 0)
{
  <h3><i>There are no Authors in the Database at this time.</i></h3>
} 

@foreach (Author author in Model)
{
  <li>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</li>
}

<p>@Html.ActionLink("Add new author", "Create")</p>